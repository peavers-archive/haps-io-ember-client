{{#if item.body}}
  <div class="content feed-item-view-card" {{action 'toggleBody'}}>

    <div class="columns">

      <div class="column is-narrow is-hidden-mobile">
        <div class="item-image">
          {{#if item.image}}
            <img src="data:image/jpeg;base64,{{item.image}}">
          {{else}}
            <span class="no-image">?</span>
          {{/if}}
        </div>
      </div>

      <div class="column">

        <div class="tags">
          {{#if item.classification}}
            {{#each item.classification as |classification|}}
              <div class="tag is-outlined">{{classification.name}}</div>
            {{/each}}

          {{else}}
            <div class="tag is-outlined">I don't know...</div>

          {{/if}}

        </div>

        <div class="item-title">
          {{item.title}}
        </div>

        <div class="item-description">
          {{item.description}}
        </div>

        <div class="item-meta">
          <span class="item-source">{{item.sourceLink}}</span> {{moment-calendar item.createdAt}}
        </div>

        {{#if hasBodyDisplayed}}
          <div class="item-body">
            {{{item.body}}}
          </div>
        {{/if}}

      </div>


    </div>

  </div>
{{/if}}