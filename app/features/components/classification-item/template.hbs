<div class="column is-4 is-offset-4">

  <div class="level">
    <div class="level-left">
      {{item.name}}
    </div>

    <div class="level-right">
      {{x-toggle
        theme='material'
        size='small'
        value=item.state
        onLabel='Enabled::true'
        offLabel='Disabled::false'
        onToggle=(action 'filter')
      }}
    </div>
  </div>

</div>